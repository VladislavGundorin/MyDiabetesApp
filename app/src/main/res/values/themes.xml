<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MyDiabetesApp" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="bottomNavigationStyle">@style/BottomNavigationTheme</item>
    </style>

    <style name="Theme.MyDiabetesApp" parent="Base.Theme.MyDiabetesApp"/>

    <style name="BottomNavigationTheme" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextAppearance">@style/BottomNavTextStyle</item>
        <item name="android:background">@color/surfaceColor</item>
    </style>

    <style name="BottomNavTextStyle" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>
</resources>
